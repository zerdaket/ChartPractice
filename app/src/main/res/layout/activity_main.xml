<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zerdaket.chartpractice.widget.chart.pie.PieChartView
            android:id="@+id/pieChart"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"/>

        <com.zerdaket.chartpractice.widget.chart.polygon.RegularPolygonView
            android:id="@+id/polygon"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"/>

        <com.zerdaket.chartpractice.widget.chart.histogram.HistogramView
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>